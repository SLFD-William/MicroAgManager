@typeparam TValue

<fieldset class="ValidatedField @CssClass">
    <legend class="@(IsRequired() ? "required":"")">
        @if (LegendContent == null)
            {@Legend }
        else
            {@LegendContent}                    
    </legend>
    @ChildContent
    @if (@ValidationMessageFor != null)
    {<ValidationMessage For="@ValidationMessageFor" />}
</fieldset>

