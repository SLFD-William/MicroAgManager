@inherits Editor<LivestockTypeModel>    
@using Domain.Constants;
@using Domain.Enums;
@using Domain.Models;
@if (livestockType is not null)
{ 
<EditForm OnValidSubmit="OnSubmit" EditContext="@editContext">
    <DataAnnotationsValidator />
    <div class="dataSection">
        <ValidatedField Legend="Name" ValidationMessageFor="@(() => livestockType.Name)">
                <InputText placeholder="Name" @bind-Value="@Name" />
                @*<input placeholder="Name" value="@livestockType.Name" onchange="@(async (ChangeEventArgs args)=>await CheckNameExists(args))" />*@
        </ValidatedField>
        <ValidatedField Legend="Collective Name" ValidationMessageFor="@(() => livestockType.GroupName)">
            <InputText placeholder="Collective Name" @bind-Value="@livestockType.GroupName" />
        </ValidatedField>
        <ValidatedField Legend="Male Parent Name" ValidationMessageFor="@(() => livestockType.ParentMaleName)">
            <InputText placeholder="Male Parent Name" @bind-Value="@livestockType.ParentMaleName" />
        </ValidatedField>
        <ValidatedField Legend="Female Parent Name" ValidationMessageFor="@(() => livestockType.ParentFemaleName)">
            <InputText placeholder="Female Parent Name" @bind-Value="@livestockType.ParentFemaleName" />
        </ValidatedField>
        <ValidatedField Legend="Care" ValidationMessageFor="@(() => livestockType.Care)">
            <InputSelect @bind-Value="@livestockType.Care">
                <option value="@LivestockCareConstants.Individual">@LivestockCareConstants.Individual</option>
                <option value="@LivestockCareConstants.Collective">@LivestockCareConstants.Collective</option>
            </InputSelect>
        </ValidatedField>
    </div>
</EditForm>
}