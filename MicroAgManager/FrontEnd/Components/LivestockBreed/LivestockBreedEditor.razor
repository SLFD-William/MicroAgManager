@using Domain.Models;
@inherits DataComponent<LivestockBreedModel>
@if (editContext is not null)
{
    <ValidatedForm editContext="editContext"
                   FreshenData="FreshenData"
                   OnValidSubmit="OnSubmit" 
                   Cancel="Cancel"
                   showUpdateCancelButtons="true"
                   createOnly="@(((LivestockBreedModel)working).Id<1)"
                   Modal="Modal"
Show="Show"
    @ref=_validatedForm>
        <DataContent>
            <ValidatedField Legend="Name" ValidationMessageFor="@(() => ((LivestockBreedModel)working).Name)">
                <InputText placeholder="Name" @bind-Value="@(((LivestockBreedModel)working).Name)" />
            </ValidatedField>
            <ValidatedField Legend="Emoji" ValidationMessageFor="@(() => ((LivestockBreedModel)working).EmojiChar)">
                <InputText placeholder="Emoji" @bind-Value="@(((LivestockBreedModel)working).EmojiChar)" />
            </ValidatedField>
            <ValidatedField Legend="Gestation Period (days)" ValidationMessageFor="@(() => ((LivestockBreedModel)working).GestationPeriod)">
                <InputNumber placeholder="150" @bind-Value="@(((LivestockBreedModel)working).GestationPeriod)" />
            </ValidatedField>
            <ValidatedField Legend="Heat Period (days)" ValidationMessageFor="@(() => ((LivestockBreedModel)working).HeatPeriod)">
                <InputNumber placeholder="30" @bind-Value="@(((LivestockBreedModel)working).HeatPeriod)" />
            </ValidatedField>
        </DataContent>
@*          <SecondaryContent>
            @if (((LivestockBreedModel)working).Id > 0)
            {
                <CascadingValue Value="working">
                    <LivestockBreedSubTabs></LivestockBreedSubTabs>
                </CascadingValue>
            }
        </SecondaryContent> *@
</ValidatedForm>
}